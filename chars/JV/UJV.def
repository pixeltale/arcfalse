; Definition file for Justice Viroi (JV)
; Contains all the filenames needed for the character

; Player information
[Info]
name 		= "UJV"        		;Name of character
displayname 	= "U.J.V."		;Name of character to display
versiondate 	= 11,24,2021    	;Version date of character (MM-DD-YYYY or X.XX)
mugenversion 	= 1.0         	;Version of M.U.G.E.N character works on (X.XX)
ikemenversion	= 0.99
author 		= "PXN."         		;Character author name
pal.defaults 	= 1,2,3,4      	;Default palettes in order of preference (up to 4)                          
localcoord 	= 280,240       	;Local coordinate space width and height

; Files for the player
[Files]
