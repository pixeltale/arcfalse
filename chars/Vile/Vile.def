;Stick Figure Information
[Info]
name = "Vile"        ;Name of character
displayname = "Vile" ;Name of character to display
versiondate = 4,18,2020    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
ikemenversion	= 0.99
author = "Animated by Dillonator13 | Programmed by Taffy, Z & Bonehouse"         ;Character author nam
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
localcoord = 280,240        ;Local coordinate space width and height


; Files for the player
[Files]
cmd     = Vile.cmd                    ;Command set
cns     = Vile.cns                        ;Constants
st      = Vile.cns                          ;States
st1      = Normals.cns                ;Normals
st2      = Specials.cns                ;Specials
st3      = HyperCombos.cns     ;Supers
st4      = Target.cns                   ;Target
st5      = Helpers.cns                 ;Helpers
st6	= VIStates.cns
stcommon = common1.cns     ;Common states (from data/ or motif)
sprite  = Vile.sff                        ;Sprite
anim    = Vile.air                       ;Animation
sound   = Vile.snd                    ;Sound
ai      = Vile.ai                            ;AI hints data (not used)
movelist 		= Vile.dat
pal2    = 2.act
pal3    = 3.act
pal4    = 4.act
pal5    = 5.act
pal6=6.act
pal7=7.act
pal8=8.act
pal9=9.act
pal10=10.act
pal11=11.act
pal12=12.act

